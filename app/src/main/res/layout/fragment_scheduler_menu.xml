<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.scheduler.SchedulerMenuFragment"
    android:background="@drawable/nav_header_bg"
    android:orientation="vertical"
    android:id="@+id/schedmenuFragment">


    <TextView
        android:id="@+id/daysTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="#CFCDB1"
        android:text="Please Select a Day to Modify"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="#1D1E1D"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#394039"
        android:layout_marginBottom="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/mondayCard"
            android:layout_width="310dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#181819"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="#FFFFFF"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Monday"
                android:textColor="@color/main_green"
                android:textSize="35sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/delete_btn_monday"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#E34242"
            app:cardCornerRadius="13dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="0.5dp"
                android:src="@drawable/bin_delete"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

